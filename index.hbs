{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}


{{! The big featured header on the homepage, with the site description }}

<header class="main-header">
    <div class="wrapper">
        <div class="grid-container grid-720">
            <div class="inner-header">
                <span class="table-span">
                    <span>
                        <h1 itemprop="name">{{@blog.title}}</h1>
                        <h2 itemprop="description">{{@blog.description}}</h2>
                    </span>
                </span>
            </div>
        </div>
    </div>
</header>

<div class="grid-container">
    <div class=" grid-75">
		{{! The main content area on the homepage }}
        <section id="post-container" role='main' class="main-section hide-post">

            <div class="grid-container grid-720">

				{{#if @blog.cover}}<img id="bg-img" src="{{@blog.cover}}">{{/if}}

				{{! Each post will be output using this markup }}



				{{! The tag below includes the post loop - partials/post-loop.hbs }}
				{{> "post-loop"}}

            </div>


        </section>
        <section>
            <div class="grid-container grid-720">
				{{pagination}}
            </div>
        </section>
    </div>
    <div class="grid-25">


        <h1>Follow</h1>
        <ul style="list-style-type:none;">
			<li><a href="http://instagram.com/hacker.matt/" target="_blank">Instagram</a></li>
            <li><a href="https://github.com/schematical" target="_blank">Github</a></li>
			<li><a href="https://twitter.com/schematical" target="_blank">Twitter</a></li>
			<li><a href="https://www.facebook.com/shiporgetoffthepot" target="_blank">Facebook</a></li>
		</ul>

        <h1>Links</h1>
        <ul style="list-style-type:none;">
			<li><a href="/">Home</a></li>
			<li><a href="/work-with-me/">Work With Me</a></li>
			<li><a href="http://schematical.com?ref=shiporgetoffthepot.com" target="_blank">Schematical.com</a></li>
			<!--<li><a href="/about/">About</a></li>-->
			<li><a href="/press/">Press</a></li>
		</ul>

        <h1>Topics</h1>
        <tag-list tags="tags"></tag-list>

		{{#get "posts" filter="featured:true" limit="3" as |featured|}}
				<h1>Popular Posts</h1>
				<ul style="list-style-type:none;">
					{{#foreach featured}}
						<li style="margin-bottom: 20Px;	"><a href="{{url}}">{{title}}</a></li>
					{{/foreach}}
				</ul>
		{{/get}}
    </div>
</div>
